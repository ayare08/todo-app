pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/ayare08/todo-app.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('checkfile') {
            steps {
                sh 'ls -lrtha'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}

