pipeline {
    agent any


    environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/ayare08/todo-app.git', branch: 'main'
            }
        }

        stage('Trigger AWS CodeBuild') {
            steps {
                withCredentials([aws(credentialsId: 'aws-codebuild', region: 'us-east-1')]) {
                    script {
                        echo "Triggering AWS CodeBuild..."

                        // Trigger AWS CodeBuild project using AWS CLI
                        def buildResult = sh(script: 'aws codebuild start-build --project-name todo-app-build --query "build.id"', returnStdout: true).trim()

                        if (buildResult) {
                            echo "Build started successfully with ID: ${buildResult}"
                        } else {
                            error "Failed to trigger AWS CodeBuild"
                        }
                    }
                }
            }

        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('checkfile') {
            steps {
                sh 'ls -lrtha'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}

