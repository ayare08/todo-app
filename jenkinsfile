pipeline {
    agent any


    environment {
        AWS_REGION = 'us-east-1'  // Set your AWS region here
        AWS_CREDENTIALS = 'aws-codebuild'  // Jenkins credentials ID for AWS
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/ayare08/todo-app.git', branch: 'main'
            }
        }

    stages {
            stage('Trigger CodeBuild') {
                steps {
                    withCredentials([aws(credentialsId: 'aws-codebuild', region: "${env.AWS_REGION}")]) {
                        script {
                            sh 'aws codebuild start-build --project-name todo-app-build'
                        }
                    }
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('checkfile') {
            steps {
                sh 'ls -lrtha'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}

